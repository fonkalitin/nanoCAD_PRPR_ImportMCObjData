<Window x:Name="kipDataWindow" x:Class="PRPR_ImportMCObjData.KIPdataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PRPR_ImportMCObjData"
        mc:Ignorable="d"
        Title="Таблица технологических параметров КИПиА" Height="750" Width="1050">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="877*"/>
            <ColumnDefinition Width="123*"/>
        </Grid.ColumnDefinitions>

        <DataGrid 
    x:Name="dataGrid" 
    AutoGenerateColumns="False" 
    Margin="16,68,45,108" 
    d:ItemsSource="{d:SampleData ItemCount=5}" 
    Grid.ColumnSpan="2">


            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="Green"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>

        </DataGrid>

        <TextBox x:Name="searchTextBox" HorizontalAlignment="Left" Height="19" Margin="16,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148" KeyUp="SearchTextBox_KeyUp"/>
        <TextBlock x:Name="resultTextBlock" HorizontalAlignment="Left" Height="19" Margin="181,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="175"/>
        <Button x:Name="CheckAll" Content="Выбрать все позиции" HorizontalAlignment="Left" Height="19" Margin="440,31,0,0" VerticalAlignment="Top" Width="142" Click="CheckAll_Click"/>
        <Button x:Name="CheckNone" Content="Снять выбор" HorizontalAlignment="Left" Height="19" Margin="592,31,0,0" VerticalAlignment="Top" Width="98" Click="CheckNone_Click"/>
        <Button x:Name="CheckSelected" Content="Выбрать выделенные" HorizontalAlignment="Left" Height="19" Margin="698,31,0,0" VerticalAlignment="Top" Width="142" Click="CheckSelected_Click"/>
        <TextBlock x:Name="SelectedCount" HorizontalAlignment="Left" Height="19" Margin="377,31,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="51"/>
        <Button x:Name="ExportToCsvBtn" Content="Экспорт в таблицу CSV" HorizontalAlignment="Left" Height="23" Margin="439,646,0,0" VerticalAlignment="Top" Width="143" Click="ExportToCsvBtn_Click"/>
        <Button x:Name="ExportToXlsxBtn" Content="Экспорт в таблицу XLSX" HorizontalAlignment="Left" Height="23" Margin="439,674,0,0" VerticalAlignment="Top" Width="143" Click="ExportToXlsxBtn_Click"/>
        <CheckBox x:Name="ExportHeaders" Content="Выводить заголовки столбцов" HorizontalAlignment="Left" Height="21" Margin="592,662,0,0" VerticalAlignment="Top" Width="208" Checked="ExportHeaders_Checked"/>
        <Button x:Name="LoadDataToObjBtn" Content="&lt;&lt;&lt; Загрузка в объекты чертежа" HorizontalAlignment="Left" Height="21" Margin="198,646,0,0" VerticalAlignment="Top" Width="204" Click="LoadDataToObjBtn_Click"/>
        <Button x:Name="AutoLoadDataToObjBtn" Content="Автозагрузка данных в КИП" HorizontalAlignment="Left" Height="22" Margin="198,675,0,0" VerticalAlignment="Top" Width="204" Click="AutoLoadDataToObjBtn_Click"/>
        <Button x:Name="CheckDataBtn" Content="Проверить данные КИП" HorizontalAlignment="Left" Height="28" Margin="16,656,0,0" VerticalAlignment="Top" Width="160" Click="CheckDataBtn_Click">
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </Button>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="81" Margin="428,633,0,0" VerticalAlignment="Top" Width="372"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="81" Margin="189,633,0,0" VerticalAlignment="Top" Width="231"/>

    </Grid>
</Window>
